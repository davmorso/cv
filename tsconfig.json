{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2022",
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@/*": [ "cv-api/src/*" ]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "types": [
      "jasmine",
      "node"
    ]
  },
  "include": [
    "cv-api/src/**/*.ts",
    "cv-api/test/**/*.ts"
  ]
}